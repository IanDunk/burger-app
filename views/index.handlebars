<div class="container">

  <div class="row text-center">  
    <h1><strong>Burgers!</strong></h1> <!-- Title -->
  </div>

  <div class="row">
    
    <div class="col-sm-4 text-center"> <!-- uneaten column -->
      <h2>Burgers that are not eaten</h2>
      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eaten=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-4 text-center"> <!-- form group -->
      <h2>Add a Burger</h2>
      <img src="http://laoblogger.com/images/burger-with-no-background-clipart-7.jpg" alt="Picture of a burger" id="burger-img"/>
      <form class="create-form">

        <div class="form-group">
          <label for="burgerName">Burger Name:</label>
          <input type="text" id="burgerName" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-sm-4 text-center"> <!-- eaten column -->
      <h2>Burgers that are eaten</h2>
      <ul>
        {{#each burgers}}
          {{#if eaten}}
            {{> burgers/burger-block eaten=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

</div>
